
@{
    ViewBag.Title = "Insertar";
}

<h2>Insertar</h2>


<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <meta charset="utf-8">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <title></title>
</head>
<body>
    @using (Html.BeginForm("Insertar", "Causantes", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <!-- se crea una seccion tipo carta  -->
        <a href="/Causantes/Index"><input type="button" value="Volver" class="btn btn-info " /></a>
        <div class="card">
            <div class="card-body">
                <!-- este es un boton para subir los achivos ecxel -->
                @Html.TextBox("Files", "", new { type = "file" }) <br />



                <!-- si el archivo no se ha subido o el formato esta incorrecto se enviara un mensaje  -->
                @{
                    if (ViewBag.Message != null)
                    {
                        @ViewBag.Message
                    }

                }
            </div>
            <!-- este es un boton para iniciar el proceso subir el archivo y comenzar el proceso post -->
            <input type="submit" value="subir" class="btn btn-success" />
        </div>

    }
</body>
</html>
